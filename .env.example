# Musical Zoe Frontend - Environment Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# SERVER-SIDE VARIABLES (accessible via $env/static/private)
# These are used by server-side code (+server.ts files, +page.server.ts files)
# =============================================================================

# API Configuration
API_BASE_URL="http://localhost:4000/v1"
API_SIGNUP_URL="${API_BASE_URL}/api"
API_ACTIVATION_URL="${API_BASE_URL}/api/activated"
API_AUTHENTICATION_URL="${API_BASE_URL}/api/authentication"

# Music API Endpoints
MUSIC_API_NEWS_URL="${API_BASE_URL}/musical/news"
MUSIC_API_TRENDS_URL="${API_BASE_URL}/musical/trends"
MUSIC_API_LYRICS_URL="${API_BASE_URL}/musical/lyrics"
MUSIC_API_TRACK_INFO_URL="${API_BASE_URL}/musical/track-info"
MUSIC_API_HEALTH_URL="${API_BASE_URL}/health"

# =============================================================================
# CLIENT-SIDE VARIABLES (accessible via $env/static/public)
# These are used by client-side code and are prefixed with VITE_
# =============================================================================

# API Configuration (Client-side)
VITE_API_BASE_URL="http://localhost:4000/v1"
VITE_API_SIGNUP_URL="${VITE_API_BASE_URL}/api"
VITE_API_ACTIVATION_URL="${VITE_API_BASE_URL}/api/activated"
VITE_API_AUTHENTICATION_URL="${VITE_API_BASE_URL}/api/authentication"

# Music API Endpoints (Client-side)
VITE_MUSIC_API_NEWS_URL="${VITE_API_BASE_URL}/musical/news"
VITE_MUSIC_API_TRENDS_URL="${VITE_API_BASE_URL}/musical/trends"
VITE_MUSIC_API_LYRICS_URL="${VITE_API_BASE_URL}/musical/lyrics"
VITE_MUSIC_API_TRACK_INFO_URL="${VITE_API_BASE_URL}/musical/track-info"
VITE_MUSIC_API_HEALTH_URL="${VITE_API_BASE_URL}/health"

# App Configuration
VITE_APP_NAME="Musical Zoe"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="development"

# Debug & Logging
VITE_DEBUG_MODE="true"
VITE_LOG_LEVEL="debug"

# =============================================================================
# PRODUCTION CONFIGURATION NOTES
# =============================================================================
# For production deployment, update the following:
# 1. Change API_BASE_URL and VITE_API_BASE_URL to your production API
# 2. Update API_AUTHENTICATION_URL if different from base URL pattern
# 3. Set VITE_APP_ENV="production"
# 4. Set VITE_DEBUG_MODE="false"
# 5. Set VITE_LOG_LEVEL="error"
#
# Example production values:
# API_BASE_URL="https://api.musical-zoe.com/v1"
# VITE_API_BASE_URL="https://api.musical-zoe.com/v1"
# API_AUTHENTICATION_URL="${API_BASE_URL}/authentication"
# VITE_API_AUTHENTICATION_URL="${VITE_API_BASE_URL}/authentication"
# VITE_APP_ENV="production"
# VITE_DEBUG_MODE="false"
# VITE_LOG_LEVEL="error"
